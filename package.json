{
	"name": "express-vercel-starter",
	"version": "1.0.0",
	"license": "MIT",
	"main": "index.js",
	"scripts": {
		"build": "tsup app --clean --format cjs,esm --env.NODE_ENV production",
		"check": "biome check --apply .",
		"dev": "tsx watch app/index.ts",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"format": "biome format . --write",
		"lint": "biome lint .",
		"start": "tsx app/index.ts",
		"typecheck": "tsc --noEmit",
		"vercel-build": "tsup app --clean --format cjs --env.NODE_ENV production --env.DEPLOYMENT_ENV vercel --out-dir api"
	},
	"dependencies": {
		"cors": "2.8.6",
		"express": "5.2.1",
		"helmet": "8.1.0",
		"jsend": "1.1.0",
		"pino": "9.14.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"@types/cors": "2.8.19",
		"@types/express": "5.0.6",
		"@types/jsend": "1.0.33",
		"@types/supertest": "6.0.3",
		"@vitest/coverage-v8": "3.2.4",
		"@vitest/ui": "3.2.4",
		"supertest": "7.2.2",
		"tsup": "8.5.1",
		"tsx": "4.21.0",
		"typescript": "5.9.3",
		"vitest": "3.2.4"
	}
}
